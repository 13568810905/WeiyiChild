<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DietaryEditFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dietary_edit_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/view_spacing_large"
        android:paddingEnd="@dimen/view_spacing_large"
        android:paddingBottom="@dimen/view_spacing_large">

        <Button
            android:id="@+id/add_dietary_item_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_spacing"
            android:layout_weight="1"
            android:paddingStart="@dimen/button_padding_middle"
            android:paddingTop="@dimen/button_padding_small"
            android:paddingEnd="@dimen/button_padding_middle"
            android:paddingBottom="@dimen/button_padding_small"
            android:text="@string/dietary_add_item"
            android:textSize="@dimen/text_size_default" />

        <Button
            android:id="@+id/add_dietary_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_spacing"
            android:layout_weight="1"
            android:paddingStart="@dimen/button_padding_middle"
            android:paddingTop="@dimen/button_padding_small"
            android:paddingEnd="@dimen/button_padding_middle"
            android:paddingBottom="@dimen/button_padding_small"
            android:text="@string/dietary_save"
            android:textSize="@dimen/text_size_default" />
    </LinearLayout>

</LinearLayout>